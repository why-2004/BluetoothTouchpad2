<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323232"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_a_control_type"
            android:textAlignment="center"
            android:textColor="#E0E0E0"
            android:textSize="35sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="?android:attr/listDivider" />


            <Button
                android:id="@+id/buttonAbout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#323232"
                android:onClick="trackpad"
                android:text="@string/trackpad"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#E0E0E0"
                android:textSize="20sp" />




            <Button
                android:id="@+id/buttonAchievements"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#323232"
                android:onClick="trackpoint"
                android:text="@string/trackpoint"
                android:textColor="#E0E0E0"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp" />



            <Button
                android:id="@+id/buttonPointer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#323232"
                android:onClick="pointer"

                android:text="@string/pointer"
                android:textColor="#E0E0E0"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp" />




            <Button
                android:id="@+id/buttonWebsite"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#323232"
                android:textColor="#E0E0E0"
                android:onClick="keyboard"
                android:text="@string/keyboard"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp" />



            <Button
                android:id="@+id/buttonSYFCWebsite"
                android:textColor="#E0E0E0"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#323232"
                android:onClick="procontroller"
                android:text="Pro Controller (coming soon?)"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp" />


    </LinearLayout>

</ScrollView>